@model IEnumerable<Movie> 
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Top 250 Movies of all time</h1>
</div>

<table id="moviesDataTable">
    <thead>
        <tr>
            <th>Image</th>
            <th>Rank</th>
            <th>Title</th>
            <th>Crew</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Number of Ratings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model) {
            <tr>
                <td>
                    @Html.HiddenFor(x => movie.id)
                    <img src="@movie.image" alt="the movie poster for @movie.title" />
                </td>
                <td>
                    @Html.DisplayFor(x => movie.rank)
                </td>
                <td>
                    @Html.HiddenFor(x => movie.fullTitle)
                    @Html.DisplayFor(x => movie.title);
                </td>
                <td>@Html.DisplayFor(x => movie.crew)</td>
                <td>@Html.DisplayFor(x => movie.year)</td>
                <td>@Html.DisplayFor(x => movie.imDbRating)</td>
                <td>@Html.DisplayFor(x => movie.imDbRatingCount)</td>
            </tr>
        }
    </tbody>
</table>

@section scripts 
{
    <script>
        $(function(){
            $("#moviesDataTable").DataTable();
        });
    </script>
}