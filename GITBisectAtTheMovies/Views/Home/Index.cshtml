@model IEnumerable<Movie> 
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Top 250 Movies of all time</h1>
</div>

<table id="moviesDataTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Rating</th>
            <th>Year</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model) {
            <tr>
                <td>@Html.DisplayFor(x => movie.Id)</td>
                <td>@Html.DisplayFor(x => movie.Title)</td>
                <td>@Html.DisplayFor(x => movie.Description)</td>
                <td>@Html.DisplayFor(x => movie.MPAARating)</td>
                <td>@Html.DisplayFor(x => movie.Year)</td>
            </tr>
        }
    </tbody>
</table>

@section scripts 
{
    <script>
        $(function(){
            $("#moviesDataTable").DataTable();
        });
    </script>
}